<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emptyStateRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/emptyStateTitleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?textAppearanceBoldText"
        android:textColor="@color/onMainPrimary"
        android:textSize="19sp"
        tools:text="عنوان خطای نمایش داده شده" />

    <TextView
        android:id="@+id/emptyStateSubtitleTv"
        style="@style/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="?textAppearanceRegularText"
        android:textColor="@color/onMainPrimary"
        android:textSize="17sp"
        tools:text="توضویح خطای نمایش داده شده" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/emptyStateActionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_primary_button_corner_12dp"
        android:gravity="center"
        android:outlineProvider="none"
        android:paddingStart="25dp"
        android:paddingTop="8dp"
        android:paddingEnd="25dp"
        android:paddingBottom="8dp"
        android:textAllCaps="false"
        android:textAppearance="?textAppearanceRegularText"
        android:textColor="@color/onPrimaryButton"
        android:textSize="16sp"
        tools:text="متن دکمه" />

</LinearLayout>