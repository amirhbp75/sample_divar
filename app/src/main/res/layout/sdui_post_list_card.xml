<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_article_card_corner_12dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <app.divarinterview.android.view.DivarCustomImageView
        android:id="@+id/postItemThumbnailIv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        app:roundedCornerRadius="8dp"
        tools:background="@drawable/bg_empty_state_thumbnail" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/postItemTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?textAppearanceBoldText"
            android:textColor="@color/onMainPrimary"
            android:textSize="16sp"
            tools:text="عنوان آگهی نمایش داده شده" />

        <TextView
            android:id="@+id/postItemPriceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/postItemTitleTv"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="?textAppearanceRegularText"
            android:textColor="@color/postDetail"
            android:textSize="15sp"
            tools:text="مبلغ آگهی" />

        <TextView
            android:id="@+id/postItemDistrictTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textAppearance="?textAppearanceRegularText"
            android:textColor="@color/postDetail"
            android:textSize="15sp"
            app:drawableStartCompat="@drawable/ic_location_grey_14dp"
            tools:text="موقعیت مکانی آگهی" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>