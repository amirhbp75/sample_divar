<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DivarInterview.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.DivarInterview</item>
    </style>

    <style name="Theme.DivarInterview.selectableItem">
        <item name="colorControlHighlight">@color/ripple</item>
    </style>

    <style name="selectableItemBackground">
        <item name="android:theme">@style/Theme.DivarInterview.selectableItem</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

</resources>